{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"module": "ESNext",
		"target": "ES2024",
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitOverride": true,
		"useDefineForClassFields": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"types": ["svelte"],
		"paths": {
			"@mateothegreat/svelte5-router": [
				"./types/@mateothegreat/svelte5-router/index.d.ts"
			]
		}
	},
	"include": [
		"types/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.svelte",
		"../../global.d.ts",
		"src/svelte.d.ts"
, "tests/zone-layout-calculator.test.ts", "tests/grid-placement.test.ts", "tests/grid-drag-state.test.ts", "tests/grid-area.test.ts", "tests/types.test.ts", "tests/zone-layout-calculator.test.ts"	],
	"exclude": ["node_modules/*", "public/*"]
}
